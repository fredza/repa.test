        <div class="container">
            <h1>{{ ad.title }}</h1>
            <p>{{ ad.introduction }}</p>
            <p class="h2">
                <strong>{{ ad.rooms }}</strong> pour <strong>{{ ad.price }}&euro;</strong> par nuit

            </p>
            <a href="#" class="btn btn-primary">RÃ©server</a>
